<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- 基础应用主题 -->
    <style name="Theme.MyApplication" parent="Theme.Material3.Light.NoActionBar">
        <!-- 主色调 -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- 次级色调 -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- 背景色 -->
        <item name="colorOnBackground">@color/black</item>

        <!-- 表面色（卡片、组件等） -->
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>

        <!-- 标题栏文字样式 -->
        <item name="android:windowTitleStyle">@style/TitleTextStyle</item>

        <!-- 状态栏颜色 -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <item name="android:windowLightStatusBar" tools:targetApi="30">false</item>
    </style>

    <!-- 深色主题 -->
    <style name="Theme.MyApplication.Dark" parent="Theme.Material3.Dark.NoActionBar">
        <!-- 主色调 -->
        <item name="colorPrimary">@color/purple_400</item>
        <item name="colorPrimaryVariant">@color/purple_600</item>
        <item name="colorOnPrimary">@color/black</item>

        <!-- 其他颜色属性与浅色主题对应调整 -->>
        <item name="colorOnBackground">@color/white</item>
        <item name="colorSurface">@color/grey_900</item>
        <item name="colorOnSurface">@color/white</item>

        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <item name="android:windowLightStatusBar" tools:targetApi="30">true</item>
    </style>

    <!-- 标题文字样式 -->
    <style name="TitleTextStyle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>
</resources>